<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Big" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius_big</item>
        <item name="android:textAppearance">@style/Text.System.Button.L</item>
    </style>

    <style name="Button.Big.Field" parent="Button.Big">
        <item name="backgroundTint">@color/button_filled_wave_background_selector</item>
        <item name="rippleColor">@color/primary_wave_50</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="Button.Big.Outlined" parent="Button.Big">
        <item name="backgroundTint">@color/primary_wave_5</item>
        <item name="rippleColor">@color/primary_wave_25</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
    </style>

    <style name="Button.Big.Minimal" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius_big</item>
        <item name="android:textAppearance">@style/Text.System.Button.L</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
    </style>


    <style name="Button.Small" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius_small</item>
        <item name="android:textAppearance">@style/Text.System.Button.S</item>
    </style>

    <style name="Button.Small.Field" parent="Button.Small">
        <item name="backgroundTint">@color/button_filled_wave_background_selector</item>
        <item name="rippleColor">@color/primary_wave_50</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="Button.Small.Outlined" parent="Button.Small">
        <item name="backgroundTint">@color/primary_wave_5</item>
        <item name="rippleColor">@color/primary_wave_25</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
    </style>

    <style name="Button.Small.Minimal" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius_small</item>
        <item name="android:textAppearance">@style/Text.System.Button.S</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="android:textColor">@color/button_wave_text_color_selector</item>
    </style>
</resources>